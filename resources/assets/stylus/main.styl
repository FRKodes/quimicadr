			p.catalogos
				font-size 1.7em
				width 100%
			.prods
				li
					padding-bottom 5px
					a
						color txt_color
						text-decoration underline
			.more
				font-size 1.2em
				span.icon-02
					font-size 2.4em
		.buscamos
			font-size 1.6em
			padding 150px 5% 110px 5%
		.certificados
			h2
				font-size 1.8em
			p
				font-size 1em
